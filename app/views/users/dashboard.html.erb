<% if flash[:notice] %>
    <div class="alert-box"><%= flash[:notice] %></div>
<% end %>
<h1>This is the dashboard dawg</h1>
<head>
<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
<script>
  var hash = <%= raw @hash.to_json %>;
</script>
</head>

    
<div class='row'>
<h2>Available Swarms</h2>
<% @swarms.each do |swarm| %>
  <% unless swarm.assigned %>
    <div class="panel">
      <%= swarm.name %>
      Swarm active?: <%= swarm.active_status %>
       Assigned?: <%= swarm.assigned %>
      <%= button_to "CLAIM", {controller: "swarms", action: "assign_swarm", id: swarm.id }, class: "button" %>
    </div>
  <% end %>
<% end %> 
</div>

<div class='row'>
  <h2> My Swarms</h2>
<% if @userswarms %>
<% @userswarms.each do |userswarm| %>
  <!-- instead of this, maybe create an archive object -->
  <% if userswarm.active_status %>
  <div class="panel">
    <%= userswarm.name %>
    Swarm active?: <%= userswarm.active_status %>
     Assigned?: <%= userswarm.assigned %>
     <%= button_to "COMPLETE", {controller: "swarms", action: "deactivate", id: userswarm.id }, class: "button alert" %>
     <%= button_to "UNCLAIM", {controller: "swarms", action: "reactivate", id: userswarm.id }, class: "button" %>
  </div>
  <% end %>
<% end %> 
<% else %>
You have no swarms!
<% end %>
</div>

<%= button_to "Logout", {controller: "sessions", action: "destroy"}, class: "button alert" %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<% console %>