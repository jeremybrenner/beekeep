
<% flash.each do |msg| %>
  <li><%= msg %></li>
<% end %>


<%= form_for @swarm do |s| %>
<%= label_tag 'Name' %>
<%= s.text_field :name %>
<%= label_tag 'Email' %>
<%= s.text_field :email %>
<%= label_tag 'Phone Number' %>
<%= s.text_field :phone %>
<%= label_tag 'Description' %>
<%= s.text_area :description %>
<%= label_tag 'Address' %>
<%= s.text_field :address %>
<%= s.submit "Report a swarm", :class => 'button' %>
<% end %>