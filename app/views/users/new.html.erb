
<!-- a catch all template for :error flashes, partial this -->
<% if flash[:error] %>
      <% if flash[:error].include?("can't be blank") %>
      <div data-alert class="alert-box"><%=  "Please check and fill in any blank fields!" %></div>
      <% end %>
      <% if flash[:error].include?("has already been taken") %>
      <div data-alert class="alert-box"><%=  "Your email, phone, or username already exists!" %></div>
      <% end %>
      <% if flash[:error].include?("confirmation doesn't match") %>
      <div data-alert class="alert-box"><%=  "Your passwords do not match!" %></div>
      <% end %>
      <% if flash[:error].include?("too") %>
      <div data-alert class="alert-box"><%=  "Please check the length of your password" %></div>
      <% end %>
       <% if flash[:error].include?("number") %>
      <div data-alert class="alert-box"><%=  "Please enter a valid phone number!" %></div>
      <% end %>
<% end %>


<%= form_for :user, url: signup_path, method: 'post', :html => {'data-abide' => ' ' } do |u| %>
  <%= label_tag 'First Name' %>
  <%= u.text_field :first_name %>
  <%= label_tag 'Last Name' %>
  <%= u.text_field :last_name %>
  <%= label_tag 'User Name' %>
  <%= u.text_field :username %>
  <%= label_tag 'Location' %>
  <%= u.text_field :address %>
  <%= label_tag 'Phone number' %>
  <%= u.text_field :phone %>
  <%= label_tag 'Email' %>
  <%= u.text_field :email %>
  <%= label_tag 'Password' %>
  <%= u.password_field :password %>
  <%= label_tag 'Password confirmation' %>
  <%= u.password_field :password_confirmation %>
  <%= u.submit "Sign Up", :class => 'button' %>
<% end %>

